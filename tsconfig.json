{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "lib": ["ES2020", "DOM"],
    "allowJs": true,
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "paths": {
      "@web/*": ["web/*"],
      "@compiler/*": ["compiler/*"],
      "@keys/*": ["keys/*"]
    }
  },
  "include": ["web", "compiler", "keys"],
  "exclude": ["node_modules", "**/node_modules", "**/.next", "**/dist"]
}
